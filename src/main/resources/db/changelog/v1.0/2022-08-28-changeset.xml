<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:pro="http://www.liquibase.org/xml/ns/pro"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

	<changeSet id="create-table-sellers"
		author="andrewsha">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="sellers" />
			</not>
		</preConditions>
		<createTable tableName="sellers">
			<column name="id" type="uuid">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addForeignKeyConstraint
			baseColumnNames="id" baseTableCatalogName=""
			baseTableName="sellers" baseTableSchemaName="public"
			constraintName="fk_sellers_users" deferrable="true"
			initiallyDeferred="true" onDelete="CASCADE" onUpdate="RESTRICT"
			referencedColumnNames="id" referencedTableCatalogName=""
			referencedTableName="users" referencedTableSchemaName="public"
			validate="true" />
	</changeSet>

</databaseChangeLog>